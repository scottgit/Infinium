doctype html
html
  head
      block head
        title="Infinium"
        link(rel='stylesheet' href='/stylesheets/reset.css')
        link(rel='stylesheet' href='/stylesheets/layout.css')
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@600&display=swap")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@900&display=swap")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;900&display=swap")
        script(src="/javascripts/layout.js" type="module" defer)
      block head_trailer
  body
    header
      .header
        .title
          img(src="/images/infinity.jpg", alt="Infinity" class="infinity_image")
          .title_name Infinium
          if contextMessage
            .title_greeting= contextMessage
          else
            .title_greeting Live Long and Prosper
          if contextControls
            if (contextControls === 'story-edit' || contextControls === 'story-edit-with-publish')
              button.story-save(type='submit' form='story-edit' value="Save") Save
            if (contextControls === 'story-edit-with-publish')
              button.story-publish(type='button' value="Publish") Publish
        .icons
          if locals.authenticated
            form(action="/users/logout" method="post")
              button(type="submit" class="logout") Logout
            .dropdown
              img(src="/images/dogs.jpg", alt="Doggies!" class="icons_image")
              div(class="dropdown_content" id="myDropdown")
                .header_mini
                  img(src="/images/dogs.jpg", alt="Doggies!" class="icons_image")
                  .naming_info
                    p(class="naming_info_list1") Name
                    p(class="naming_info_list2") @reference
                a(href="#") New Story
                a(href="#") Stories
                a(href="#") Settings
          else
            span(class="loggedin")
              a(class="login" href='/users/login') Login
              a(class="register" href='users/register') Register
    block content
