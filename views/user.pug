doctype html
html
  head
      block head
        title="Infinium"
        link(rel='stylesheet' href='/stylesheets/user.css')
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@900&display=swap")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@100;900&display=swap")
        script(src="/javascripts/user.js" type="module" defer)
  body
    header
      .header
        .title
          a(href=`/users/${userId}` class= "title_name")= name
          .followers 1 Follower
          .dot .
          a(href="" class="about") About
        .icons
          .dropdown
            a(href="" class="icons_image_holder")
              img(src="/images/dogs.jpg", alt="Doggies!" class="icons_image")
            div(class="dropdown_content" id="myDropdown")
              .header_mini
                img(src="/images/dogs.jpg", alt="Doggies!" class="icons_image")
                .naming_info
                  a(href=`/users/${locals.user.id}` class="naming_info_list1")= locals.user.username
                  a(href=`/users/${locals.user.id}` class="naming_info_list2") @#{locals.user.username}
              a(href="/") Home
              a(href="/stories/new-story") New Story
              a(href="#") Settings
          a(href="/stories/new-story")
            button(type="button" class="new_story") New Story
          a(href="/")
            .infinity_image
              img(src="/images/infinity.jpg" alt="Infinity" class="infinity_image_icon")
    section
      .about_me
        .person_info.hide
          .nameplate About #{name}
            p(class="nameplate_bio") I'm so interesting!
          .follow_following
            .person_info_following 13 Following
            .person_info_dot .
            .person_info_follower 1 Follower
        .profilePic.hide
          img(src="/images/dogs.jpg", alt="doggies" class="profilePic_pic")
      if authCompare
        .question
          p(class="question_ask") Have something to share?
          a(href="/stories/new-story" class="question_answer") Create your own world.
      else
        .storyholder
          .recentStories
            each sto in stories
              .recentStory
                a(href=`/users/${userId}/stories/${sto.hexId}` class="recentStory_title")= sto.title
                h3(class="recentStory_subtitle")= sto.subtitle
              if (sto.imageLink)
                .storyImage
                  img(src= sto.imageLink, alt="doggies" class="storyImage_recent")
              .storyBody
                p= sto.published
