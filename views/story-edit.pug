extends layout
include utils

block head_trailer
  link(rel='stylesheet' href='/stylesheets/story-edit.css')
  script(src="/javascripts/story-edit.js" type="module" async defer)

block content
  #story-editor.story-editor
    +validationErrorSummary(errors)
    form#story-edit.story-edit(action=formAction, method='post', autocomplete='off')
      input(type='hidden' name='_csrf' value=csrfToken)
      input.story-edit-title(type='text', value=title, name='title', placeholder='Your story\'s title (max. 100 characters)', maxlength=100)
      textarea.story-edit-draft(name='draft', placeholder='Tell your story...') #{draft}
  if (contextControls === 'story-edit-with-publish')
    #story-publisher.story-publisher.hide
      .story-publisher-close X
      form#story-publish-form.story-publish-form(action=`${formAction}/publish`, method='post')
        +validationErrorSummary(publishErrors)
        input(type='hidden' name='_csrf' value=csrfToken)
        input.story-publish-draft(type='hidden' name='draft' value=draft)
        .image-wrapper= `Include a URL to a high-quality image in your story to make it more inviting to readers.`
          img.story-publish-image.hide(src=imageLink)
        input.story-publish-image-path(type='text', value=imageLink, name='imageLink', placeholder='Optional URL to image (max. 255 characters)', maxlength=255)
        input.story-publish-title(type='text', value=title, name='title', placeholder='Your story\'s title (max. 100 characters)', maxlength=100)
        input.story-publish-subtitle(type='text', value=subtitle, name='subtitle', placeholder='Optional subtitle (max. 100 characters)', maxlength=100)
        button.story-publish-now.rainbow-button(type='submit' form='story-publish') Publish now
